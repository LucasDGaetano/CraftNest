<div class="container">
  <h1 class="d-flex justify-content-between">ALL THE ATELIERS (<%= @ateliers.count %>)   <%= link_to "Create a new atelier", new_atelier_path, style:'color:white', class:'btn btn-success'%></h1>


  <div class="row row-cols-1 row-cols-md-4 g-4 justify-content-center">
    <% @ateliers.each do |atelier| %>
    <div class="col">
      <%= link_to atelier_path(atelier), class: "text-decoration-none" do %>
        <div class="card-trip card my-3">
          <%= cl_image_tag atelier.photo.key, height: 1000, width: 1000, class: "card-img-top" %>
          <div class="card-trip-infos">
            <div>
              <h2><%= atelier.name %></h2>
              <p><%= atelier.location %></p>
            </div>
            <h2 class="card-trip-pricing"><%= atelier.price %> â‚¬</h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>
        <% end %>
    </div>
    <% end %>
  </div>
</div>
